# FandomX AWS Production Profile
# Copy to: config/profile.aws-prod.env
# NOTE: keep real secrets in AWS Secrets Manager, not in this file.

APP_PROFILE=aws-prod
NODE_ENV=production

# Core service endpoints (replace with your private DNS / ALB / service discovery)
DATABASE_URL=postgresql://<user>:<password>@<rds-endpoint>:5432/fxdb
OPTIMIZER_ADMIN_URL=http://optimizer.internal:8000/admin
OPTIMIZER_URL=http://optimizer.internal:8000/optimize
ORCHESTRATOR_URL=http://orchestrator.internal:8090
OPTIMIZER_BASE_URL=http://optimizer.internal:8000

# Enterprise security
AUTH_ENFORCE=true
AUTH_PROVIDER=auth0
AUTH_JWT_SECRET=unused_when_auth0
AUTH0_DOMAIN=<your-auth0-domain>
AUTH0_AUDIENCE=<your-auth0-audience>
TRUSTED_ORIGINS=https://brand.yourdomain.com,https://club.yourdomain.com
ADMIN_TOKEN=<strong-admin-token>

# Stripe (from Secrets Manager at runtime)
STRIPE_SECRET_KEY=<from-secrets-manager>
STRIPE_WEBHOOK_SECRET=<from-secrets-manager>
STRIPE_CURRENCY=usd

# UI public endpoints
NEXT_PUBLIC_API_GATEWAY_URL=https://api.yourdomain.com
NEXT_PUBLIC_ORCHESTRATOR_URL=https://orchestrator.yourdomain.com
