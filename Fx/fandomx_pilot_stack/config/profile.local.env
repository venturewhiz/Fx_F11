# FandomX Local Profile (no external plugins/infra required)
# Copy to: config/profile.local.env

APP_PROFILE=local
NODE_ENV=development

# Core services (local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fxdb
OPTIMIZER_ADMIN_URL=http://localhost:8000/admin
OPTIMIZER_URL=http://localhost:8000/optimize
ORCHESTRATOR_URL=http://localhost:8090
OPTIMIZER_BASE_URL=http://localhost:8000

# Security relaxed for local testing
AUTH_ENFORCE=false
AUTH_PROVIDER=native
AUTH_JWT_SECRET=dev_only_change_me
TRUSTED_ORIGINS=*
ADMIN_TOKEN=

# Stripe optional local
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=usd

# UI endpoints
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8080
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:8090
